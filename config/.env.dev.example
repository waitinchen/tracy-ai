# Development environment variables for Lingya Voice Agent

APP_ENV=dev

# ElevenLabs API
ELEVEN_API_KEY=your_elevenlabs_api_key
ELEVEN_HUANGRONG_ID=your_voice_id

# LLM Providers (optional)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=your_anthropic_api_key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# FastAPI base URL (used when returning downloadable links)
BASE_URL=http://localhost:8000

# Simple API key protection for backend endpoints
SERVICE_API_KEY=dev-service-api-key
WHISPER_MODEL=whisper-1

# --- Realtime tuning (optional) ---
# STT partial transcript throttle interval (ms)
STT_THROTTLE_MS=700
# STT silence detection window for finalization (ms)
STT_SILENCE_MS=1500
# STT energy event throttle (ms)
STT_ENERGY_MS=120
# TTS chunk size (bytes) per read from provider
TTS_CHUNK_BYTES=24576
# TTS aggregate N chunks before sending to client
TTS_AGGREGATE=2
